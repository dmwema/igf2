{% extends 'base.html.twig' %}

{% block title %}Inspection Générale de Finance
{% endblock %}

{% block body %}
	<div class="main">
		<div class="container">
			{% if first != null %}
				<div class="top-news row post">
					<div class="col-md-6 image">
						<img src="{{ asset('uploads/posts/' ~ first.getImgPath()) }}" alt="post1">
					</div>
					<div class="col-md-6 text">
						<h3 class="title">{{ first.title }}</h3>
						<p class="description">{{ first.description }}</p>
						<a href="{{ path('actu_detail', {title: first.title, id: first.id}) }}" class="more-link">Voir plus
							<i class="fa-solid fa-arrow-right"></i>
						</a>
					</div>
				</div>
			{% endif %}
		</div>
		<hr>
		<div class="container posts" style="margin-top: 40px">
			<div class="row small-container-row ">
				{% if posts|length > 1 %}
					{% for post in posts %}
						{% if post.id != first.id %}
							<div class="postcontainer col-md-6">
								<a href="{{ path('actu_detail', {title: post.title|replace({'/': "-"}), id: post.id}) }}" class="post">
									<div class="post-img" style="background-image: url({{ asset('uploads/posts/' ~	 post.getImgPath()) }});">
										<div class="overlay"></div>
									</div>
									<div class="post-text">
										<h3 class="title">
											{{ post.title }}
										</h3>
									</div>
								</a>
							</div>
						{% endif %}
					{% endfor %}
				{% else %}
					<p>Aucune actualité disponible</p>
				{% endif %}
			</div>
		</div>
	</div>

	<script src="js/breaknews.js"></script>
{% endblock %}
