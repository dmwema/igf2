{% extends 'base.html.twig' %}

{% block title %}Inspection Générale de Finance
{% endblock %}

{% block body %}
	<style>
		.detail-small {
			margin-top: 20px;
			font-weight: 500;
			color: #242424
		}
		.detail-small i {
			font-size: 17px;
			color: rgb(228, 35, 35);
			margin-right: 5px;
		}
		.detail-small span {
			font-style: oblique;
			opacity: .8
		}
		.detail-small a {
			margin: 0 5px;
			color: #000;
			font-weight: 700;
			text-decoration: none;
		}
		.detail-small a:hover {
			color: rgb(228, 35, 35);
		}

		.post-detail .title {
			text-transform: uppercase;
			margin-top: 10px;
			font-weight: 700
		}

		.post-detail .downlod-btn {
			display: inline-block;
			text-decoration: none;
			color: #fff;
			background-color: rgb(228, 35, 35);
			padding: 10px 14px;
			font-size: 14px;
			border-radius: 3px;
			margin-top: 10px
		}

		.share ul {
			list-style: none;
			display: flex;
			padding: 0
		}

		.share ul li {
			padding-right: 5px;
		}

		.share ul li a {
			display: inline-block;
			padding: 8px 12px;
			background-color: rgb(228, 35, 35);
			color: #fff;
			border-radius: 50%
		}

		.share ul li a.facebook {
			background-color: #3b5998;
		}

		.share ul li a.twitter {
			background-color: #1DA1F2;
		}

		.share ul li a.pinterest {
			background-color: #E60023;
		}

		.share ul li a.linkedin {
			background-color: #0072b1;
		}

		.post-detail .link {
			margin-top: 50px;
			font-size: 14px;
			display: flex;
			justify-content: space-between;
		}
		.post-detail .link a {
			display: flex;
			align-items: center;
			text-decoration: none;
			background-color: #eee;
			width: 40%;
			color: #242424;
			padding: 10px 15px;
			border-radius: 4px;
			font-weight: 500;
			text-transform: lowercase;
		}
		.post-detail .link a:last-child {
			text-align: right
		}
		.post-detail .link a i {
			font-size: 20px;
			font-weight: 700;
			margin-right: 7px
		}
		.post-detail .link a:last-child i {
			margin-right: 0;
			margin-left: 7px
		}
		.post-detail .link a:hover {
			background-color: rgb(247, 220, 220)
		}

		.categories-list a {
			text-decoration: none;
			color: #000;
			font-weight: 700
		}
	</style>
	<div class="main">
		<div class="container post-detail" style="padding: 40px 0">
			<div class="row">
				<div class="col-sm-8 htexts">
					<img alt="mission" src="{{ asset('images/' ~ post.ImgPath) }}" style="width:100%; border-radius: 8px">

					<div class="detail-small">
						<small>
							<i class="fa-regular fa-clock"></i>
							<span>{{ post.createdAt|date('d-M-Y') }}</span>
							- In
							<a href="{{ url('actualites') }}">Actualités</a>
							<a href="{{ url('emplois') }}">Emplois</a>
							Par
							<a href="{{ url('mission') }}">IGF RDC</a>
						</small>
					</div>
					<h3 class="title">{{ post.title }}
					</h3>
					<a href="#" class="downlod-btn">
						<i class="fa-solid fa-download" style="margin-right: 5px"></i>Télécharger le fichier</a>
					<hr style="margin:30px 0">
					<div class="texts">
						<p>{{ post.description|lower }}</p>
					</div>
					<div class="share">
						<ul>
							<li><a href="#" class="facebook"><i class="fa-brands fa-facebook"></i></a></li>
							<li><a href="#" class="twitter"><i class="fa-brands fa-twitter"></i></a></li>
							<li><a href="#" class="pinterest"><i class="fa-brands fa-pinterest"></i></a></li>
							<li><a href="#" class="linkedin"><i class="fa-brands fa-linkedin"></i></a></li>
						</ul>
					</div>
					<div class="link">
						{% if prev != null %}
							<a href="{{ path('actu_detail', {title: prev.title, id: prev.id}) }}">
								<i class="fa-solid fa-chevron-left"></i>
								{{ prev.title }}</a>
						{% else %}
							<p></p>
						{% endif %}
						{% if next != null %}
							<a href="{{ path('actu_detail', {title: next.title, id: next.id}) }}">{{ next.title }}<i class="fa-solid fa-chevron-right"></i>
							</a>
						{% else %}
							<p></p>
						{% endif %}
					</div>
				</div>
				<div class="col-sm-4 htexts categories-list">
					<p>Catégories</p>
					<hr>
					<div>
						<a href="{{ url('actualites') }}">Actualités</a>
					</d>
					<hr>
					<div>
						<a href="{{ url('emplois') }}">Emplois</a>
					</div>
					<hr>
				</div>

			</li>
		</ul>
	</div>
</div></div></div></div>{% endblock %}
