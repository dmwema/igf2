{% extends 'base.html.twig' %}

{% block title %}Inspection Générale de Finance
{% endblock %}

{% block body %}

	<div class="content contact" style="padding: 0">

		<div class="container">
			<div class="row">
				<h3 class="section-title" style="margin-bottom: 20px">Nous contacter</h3>

				<hr style="opacity: .1; margin-bottom: 40px">

				<div class="col-md-5 mr-auto" style="font-size: 14px; opacity: .7">
					<ul class="list-unstyled pl-md-5 mb-5">
						<li class="d-flex text-black mb-2">
							<span class="mr-3">
								<i class="fa-solid fa-map-location-dot contact-icon"></i>
							</span>
							30 avenue des Forces Armées Gombe
							<br>
							Kinshasa, RDC
						</li>
						<hr>
						<li class="d-flex text-black mb-2">
							<span class="mr-3">
								<i class="fa-solid fa-phone contact-icon"></i>
							</span>
							+243 971 059 654</li>
						<hr>
						<li class="d-flex text-black">
							<span class="mr-3">
								<i class="fa-solid fa-envelope-open-text contact-icon"></i>
							</span>
							contact@igf.gouv.cd
						</li>
					</ul>
				</div>

				<div class="col-md-1"></div>

				<div class="col-md-6">
					{% for success in app.flashes('success') %}
						{% if success == 1 %}
							<div class="alert alert-success alert-dismissible fade show" role="alert">
								<strong>Succès!</strong>
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% elseif success == 0 %}
							<div class="alert alert-danger alert-dismissible fade show" role="alert">
								<strong>Échec!</strong>
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endif %}
					{% endfor %}

					{{ form_start(create_form, { 'attr' : { 'class': 'mb-5 contact-form','id': 'contactForm' } }) }}
					<div style="margin-bottom:15px" class="col-md-12 form-group">
						{{ form_widget(create_form.names) }}
					</div>
					<div style="margin-bottom:15px" class="col-md-12 form-group">
						{{ form_widget(create_form.email) }}
					</div>
					<div style="margin-bottom:15px" class="col-md-12 form-group">
						{{ form_widget(create_form.message) }}
					</div>
					{{ form_end(create_form) }}

				</div>
			</div>
		</div>

		<div class="maps">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d254618.74360090273!2d15.256407515319815!3d-4.332370238881316!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1a6a33df228cf677%3A0x2d6a8c8672a45d20!2sInspection%20G%C3%A9n%C3%A9rale%20des%20Finances%20-%20IGF!5e0!3m2!1sfr!2scd!4v1649249962060!5m2!1sfr!2scd" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
		</div>

	</div>

{% endblock %}
