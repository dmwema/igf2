{% extends 'base.html.twig' %}

{% block title %}Inspection Générale des Finances
{% endblock %}

{% block body %}
	<div id="fb-root"></div>	

	<div class="main">
		</div>
		<div class="jumbotron" style="position:relative">
			<section class="slider-bg slider">
				{% if posts|length > 0 %}
					{% for post in posts %}
						<div class="slide" style="background:linear-gradient(to bottom right, rgba(0,0,0,.4), rgba(0,0,0,.7)), url({{ post.getImgPath() }}); background-size: cover;">
							<div class="container">
								<h3 class="title">{{ post.title }}</h3>
								<p>{{ post.description }}</p>
								<a href="{{ path('actu_detail', {title: post.title, id: post.id}) }}">Voir plus <i class="fa-solid fa-arrow-right"></i></a>
							</div>
						</div>
					{% endfor %}
				{% endif %}
			</section>
		</div>
		<div class="latest-posts container">
			<h2 class="section-title">Dernières nouvelles</h2>
			{% if posts|length > 0 %}
				<div class="container posts">
					{% for post in posts %}
						<div class="postcontainer">
							<a href="{{ path('actu_detail', {title: post.title, id: post.id}) }}" class="post">
								<div class="post-img" style="background-image: url({{ post.getImgPath() }});"></div>
								<div class="post-text">
									<h3 class="title">{{ post.title }}</h3>
									<p class="more-link">Voir plus
										<i class="fa-solid fa-arrow-right"></i>
									</p>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<p>Aucune actualité disponible</p>
			{% endif %}

		</div>
		<div class="section gray logos">
			<div class="container">
				<section class="customer-logos slider">
					<div class="slide"><img src="images/p1.jpeg"></div>
					<div class="slide"><img src="images/p2.png"></div>
					<div class="slide"><img src="images/p3.png"></div>
					<div class="slide"><img src="images/p4.png"></div>
					<div class="slide"><img src="images/p5.png"></div>
					<div class="slide"><img src="images/p6.png"></div>
				</section>
			</div>
		</div>
		<div class="video-container">
			<div class="container">
				<h2 class="section-title" style="margin: 0 0 40px 0 !important;">Nos Vidéos</h2>
				<div class="row">
					<div class="col-md-4 video-texts" style="display: flex; justify-content: center; text-align: right; flex-direction: column;">
						<h3>Vulgarisation contre les antivaleurs.</h3>
						<a href="https://www.youtube.com/channel/UC1ZCoVkoGYZ4NC1p3cSBZQg/videos" target="_blank" class="more-link">Voir toutes nos vidéos
							<i class="fa-solid fa-arrow-right"></i>
						</a>
					</div>
					<div class="col-md-8 video-box" style="display: flex; justify-content: center;">
						<div class="video" style="text-align: center; font-size: 4rem; display: flex; align-items: center; justify-content: center;">
							<a href="#" class="video-link">
								<i class="fa-solid fa-play"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div style="padding: 80px 0; background-color:#fbfbfb !important" class="photo-container">
			<div class="container">

				<h2 class="section-title" style="margin: 0 0 40px 0 !important;">Nos Photos</h2>
				<div class="row">
					<div class="video-box photo col-md-8" style="display: flex; justify-content: center;">
						<div class="photo" style="text-align: center; font-size: 4rem; display: flex; align-items: center; justify-content: center;">
							<a href="#" class="video-link"></a>
						</div>
					</div>
					<div class="col-md-4 photo-texts" style="display: flex; justify-content: center; text-align: left; flex-direction: column; margin-left: 40px">
						<h3>Notre gallerie</h3>
						<a href="{{ url('photos') }}" class="more-link" style="color: #000;">Voir toutes nos photos
							<i class="fa-solid fa-arrow-right"></i>
						</a>
					</div>
				</div>
			</div>
		</div>

		
	</div>
	<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v13.0" nonce="FwwQs1J7"></script>
{% endblock %}
