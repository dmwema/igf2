{% extends 'admin/layout.html.twig' %}


{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<div class="white-box">
					<h3 class="box-title">Candidatures</h3>
					<p class="text-muted">{{ candidatures|length }}
						Offre(s)</p>
					<div class="table-responsive">
						<table class="table text-nowrap">
							<thead>
								<tr>
									<th class="border-top-0">#</th>
									<th class="border-top-0">Titre de l'offre</th>
									<th class="border-top-0">Demandeur</th>
									<th class="border-top-0">Bio</th>
									<th class="border-top-0">Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for candidature in candidatures %}
									<tr>
										<td>{{ loop.index }}</td>
										<td>{{ candidature.getOffer().title|length > 70 ? candidature.getOffer().title|lower|slice(0, 70) ~ '...'  : candidature.getOffer().title|lower  }}</td>
										<td>{{ candidature.nom ~ " " ~ candidature.postnom ~ " " ~ candidature.prenom ~ " (" ~  candidature.ville ~ ") " ~ candidature.email ~ " " ~ candidature.phone}}</td>
										<td>{{ candidature.bio|length > 70 ? candidature.bio|lower|slice(0, 70) ~ '...'  : candidature.bio|lower  }}</td>
										<td>
											<button title="Supprimer" style="color:#fff;padding: 0.275rem 0.45rem;" type="button" class="btn btn-danger">
												<i class="fas fa-trash-alt" aria-hidden="true"></i>
											</button>
											<a href="#" target="_blank" style="color:#fff;padding: 0.275rem 0.45rem;" type="button" class="btn btn-primary">
												<i class="fas fa-eye" aria-hidden="true"></i>
												Voir le CV
											</a>
										</td>
									</tr>
								{% endfor %}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
