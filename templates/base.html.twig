			var text = []
var nodes = document.querySelectorAll(".flash-news-datas p");

nodes.forEach(node => {
text.push(node.innerHTML)
})

console.log(text)

var counter = 0;
var elem = document.querySelector(".flash-news p");

setInterval(change, 5500);

function change() {
elem.classList.add("hide");
setTimeout(function () {
elem.innerHTML = text[counter];
elem.classList.remove("hide");
counter++;
if (counter >= text.length) {
counter = 0;
}
}, 500);
}

